<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
android:layout_margin="15dp"
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="5dp"

       >

        <LinearLayout
            android:id="@+id/chapterlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mSuraNameTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fathiha"

                android:background="@color/white"
                android:textColor="@color/black"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <ImageView

                android:id="@+id/mBismiTextview"
                android:layout_width="160dp"
                android:layout_height="50dp"
              android:layout_gravity="center"

              android:src="@drawable/bismi"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:gravity="center"
                />



        </LinearLayout>



    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView

        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/autoscroll_bg_selector"
        android:orientation="vertical"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chapternameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/juz_text_blue"
                android:textStyle="bold"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/mChapternoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="114"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mVersenoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/mChapternoTextView"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/mOptionMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/optionmenu" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mWordMeaningRecylerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mDynamicLayout"
                android:orientation="horizontal"></LinearLayout>-->

            <TextView
                android:id="@+id/mMeaningArabicTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/mMeaningMalayalamTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/mVerseExplanation"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:background="@drawable/rectangle_bluebg"
                android:gravity="center"
                android:text="@string/vishadeekaranm"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/mVyakyanakuripTextView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:background="@drawable/rectangle_bluebg"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/vyakyanakurip"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>




